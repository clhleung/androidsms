<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >

    <RelativeLayout
        android:id="@+id/new_conversation_activity_contact_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/new_conversation_activity_contact_image"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:contentDescription="@string/dl_failure_notification"
            android:paddingBottom="5dp"
            android:paddingEnd="17dp"
            android:paddingStart="13dp"
            android:paddingTop="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/new_conversation_activity_contact_text_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/new_conversation_activity_contact_image"
            android:layout_alignParentEnd="true"
            android:paddingBottom="0dp"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/new_conversation_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp"
                android:paddingEnd="17dp"
                android:paddingStart="0dp"
                android:textColor="@android:color/primary_text_light"
                android:textSize="@dimen/main_menu_activity_text_large_font_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/new_conversation_activity_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="17dp"
                    android:paddingStart="0dp"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/main_menu_activity_text_default_font_size"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/new_conversation_activity_number_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="17dp"
                    android:paddingStart="0dp"
                    android:paddingTop="1dp"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="@dimen/main_menu_activity_text_default_font_size"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
